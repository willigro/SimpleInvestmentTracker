<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divisor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="theme">?robbieTypographyTheme</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?robbieParagraphTextColor</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonPrimary" parent="Robbie.Button.Primary.WRAP">
        <item name="android:layout_width">0dp</item>
        <!--        <item name="android:background">@drawable/enabled_button</item>-->
        <item name="layout_constraintWidth_percent">@dimen/button_constraint</item>
    </style>

    <style name="ButtonSecondary" parent="Robbie.Button.Secondary.WRAP">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">@dimen/button_constraint_small</item>
    </style>

    <!-- CardView -->
    <style name="AppCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">3dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="AppCardViewClickable" parent="Clickable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">3dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <!-- RadioButton -->
    <style name="RadioButtonPrimary" parent="Robbie.Subtitle2">

    </style>

    <!-- CheckBox -->
    <style name="CheckBoxPrimary" parent="Robbie.Subtitle2">

    </style>
</resources>