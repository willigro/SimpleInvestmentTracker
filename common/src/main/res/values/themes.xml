<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InvestmentTracks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/robbie_color_brand_light_primary_pure</item>
        <item name="colorPrimaryVariant">@color/robbie_color_brand_light_primary_variant_pure</item>
        <item name="colorOnPrimary">@color/robbie_color_brand_light_on_primary_pure</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/robbie_color_brand_light_secondary_pure</item>
        <item name="colorSecondaryVariant">@color/robbie_color_brand_light_secondary_variant_pure
        </item>
        <item name="colorOnSecondary">@color/robbie_color_brand_light_on_secondary_pure</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="robbieTypographyTheme">@style/Robbie.TypographyTheme</item>
        <item name="robbieButtonTheme">@style/Robbie.ButtonTheme</item>
        <item name="robbieTextInputTheme">@style/Robbie.TextInputTheme</item>

        <!-- Button -->
        <item name="robbieButtonIconTintColorPrimary">@color/white</item>
        <item name="robbieButtonIconTintColorSecondary">@color/white</item>
        <item name="robbieButtonTextColorPrimary">@color/robbie_color_text_light_primary_pure</item>

        <!-- Text -->
        <item name="robbieBrandTextColor">@color/robbie_color_brand_light_primary_pure</item>
        <item name="robbieHeadingTextColor">@color/robbie_color_text_light_primary_pure</item>
        <item name="robbieSubtitleTextColor">@color/robbie_color_text_light_primary_pure</item>
        <item name="robbieParagraphTextColor">@color/robbie_color_text_light_primary_2</item>

        <!--        <item name="robbieBrandTextColor">#6c18a4</item>-->
        <!--        <item name="robbieHeadingTextColor">#3F51B5</item>-->
        <!--        <item name="robbieSubtitleTextColor">#CDDC39</item>-->
        <!--        <item name="robbieParagraphTextColor">#00BCD4</item>-->
    </style>

    <style name="Theme.InvestmentTracks.NoActionBar" parent="Theme.InvestmentTracks">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>