<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InvestmentTracks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="robbieTypographyTheme">@style/Robbie.TypographyTheme</item>
        <item name="robbieButtonTheme">@style/Robbie.ButtonTheme</item>
        <item name="robbieTextInputTheme">@style/Robbie.TextInputTheme</item>

        <item name="robbieButtonIconTintColorPrimary">@color/white</item>
        <item name="robbieButtonIconTintColorSecondary">@color/white</item>
        <item name="robbieButtonBackgroundPrimary">@color/robbie_button_color_primary</item>
        <item name="robbieButtonBackgroundSecondary">@color/robbie_button_color_primary</item>
        <item name="robbieSubtitleTextColor">@color/text_primary</item>
        <item name="robbieButtonTextColorPrimary">@color/text_secondary</item>
    </style>

    <style name="Theme.InvestmentTracks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>