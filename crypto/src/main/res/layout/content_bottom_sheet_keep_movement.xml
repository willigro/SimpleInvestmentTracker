<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_bottom_sheet_keep_movement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_open_keep_deposit"
        style="@style/Robbie.H1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/trade_movement_open_deposit"
        app:layout_constraintEnd_toStartOf="@id/txt_open_keep_crypto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_open_keep_crypto"
        style="@style/Robbie.H1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/trade_movement_open_crypto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_open_keep_deposit"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>