<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.rittmann.crypto.results.ui.CryptoResultsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".results.ui.CryptoResultsActivity">

        <TextView
            android:id="@+id/txt_crypto_results_title"
            style="@style/Robbie.H1.Bold"
            android:text="@{viewModel.cryptoResultViewBinding.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TOTAL -->

        <TextView
            android:id="@+id/txt_crypto_results_total_earned"
            style="@style/Robbie.Paragraph1"
            android:text="@{viewModel.cryptoResultViewBinding.totalEarned}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_crypto_results_title" />

        <TextView
            android:id="@+id/txt_crypto_results_total_invested"
            style="@style/Robbie.Paragraph1"
            android:text="@{viewModel.cryptoResultViewBinding.totalInvested}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_crypto_results_total_earned" />

        <TextView
            android:id="@+id/txt_crypto_results_total_on_hand"
            style="@style/Robbie.Paragraph1"
            android:text="@{viewModel.cryptoResultViewBinding.totalOnHand}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_crypto_results_total_invested" />

        <!-- AMOUNT -->

        <TextView
            android:id="@+id/txt_crypto_results_total_bought_amount"
            style="@style/Robbie.Paragraph1"
            android:text="@{viewModel.cryptoResultViewBinding.totalBoughtAmount}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_crypto_results_total_on_hand" />

        <TextView
            android:id="@+id/txt_crypto_results_total_sold_amount"
            style="@style/Robbie.Paragraph1"
            android:text="@{viewModel.cryptoResultViewBinding.totalSoldAmount}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_crypto_results_total_bought_amount" />

        <TextView
            android:id="@+id/txt_crypto_results_total_on_hand_amount"
            style="@style/Robbie.Paragraph1"
            android:text="@{viewModel.cryptoResultViewBinding.totalOnHandAmount}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_crypto_results_total_sold_amount" />

        <!-- TAX -->

        <TextView
            android:id="@+id/txt_crypto_results_total_tax_paid"
            style="@style/Robbie.Paragraph1"
            android:text="@{viewModel.cryptoResultViewBinding.totalTaxPaid}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_crypto_results_total_on_hand_amount" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>