<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_crypto_movement_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_from_trade_list_to_results"
    android:background="@color/robbie_color_brand_dark_primary_pure">

    <TextView
        android:id="@+id/adapter_crypto_movement_title_date"
        style="@style/Robbie.H3.Bold"
        android:paddingStart="@dimen/padding_standard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10/10/2020"
        tools:ignore="RtlSymmetry" />

    <include
        android:id="@+id/adapter_crypto_movement"
        layout="@layout/adapter_crypto_movements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/adapter_crypto_movement_title_date" />
</androidx.constraintlayout.widget.ConstraintLayout>