<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_crypto_movement_date_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/robbie_color_brand_dark_primary_pure"
    android:padding="@dimen/padding_standard">

    <TextView
        android:id="@+id/adapter_crypto_movement_title_date"
        style="@style/Robbie.H1.Bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/adapter_crypto_movement"
        layout="@layout/adapter_crypto_movements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/adapter_crypto_movement_title_date" />
</androidx.constraintlayout.widget.ConstraintLayout>