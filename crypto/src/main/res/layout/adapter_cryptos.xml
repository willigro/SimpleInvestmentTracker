<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_crypto"
    style="@style/Clickable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="@dimen/default_margin"
    android:layout_marginBottom="@dimen/margin_standard_small"
    android:background="@color/background_light_third">

    <TextView
        android:id="@+id/adapter_crypto_name"
        style="@style/Robbie.H1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TESTING" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divisor_height"
        android:background="@color/background_light_divisor"
        app:layout_constraintTop_toBottomOf="@id/adapter_crypto_name" />

</androidx.constraintlayout.widget.ConstraintLayout>